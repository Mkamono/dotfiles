{
    // common
    "dotfiles.repository": "https://github.com/Mkamono/dotfiles.git",
    "dotfiles.targetPath": "./workspaces/${localWorkspaceFolderBasename}/dotfiles",
    "editor.guides.bracketPairs": true,
    "editor.stickyScroll.enabled": true,
    "editor.formatOnSave": true,
    "diffEditor.experimental.showMoves": true,
    "diffEditor.hideUnchangedRegions.enabled": true,
    "terminal.integrated.cursorBlinking": true,
    "terminal.integrated.cursorStyle": "line",
    "terminal.integrated.cursorStyleInactive": "line",
    "terminal.integrated.cursorWidth": 2,
    "terminal.integrated.rightClickBehavior": "default",
    "terminal.integrated.tabs.focusMode": "singleClick",
    "files.autoGuessEncoding": true,
    "files.insertFinalNewline": true,
    "workbench.editor.tabSizing": "fixed",
    "files.associations": {
        "remote-settings.json": "jsonc"
    },
    // git
    "git.confirmSync": false,
    "GitCommitPlugin.MaxSubjectCharacters": 30,
    "git.autofetch": "all",
    // python
    "[python]": {
        "editor.defaultFormatter": "ms-python.black-formatter"
    },
    "isort.check": true,
    "editor.codeActionsOnSave": {
        "source.organizeImports": true
    },
    "notebook.formatOnSave.enabled": true,
    "notebook.diff.ignoreMetadata": true,
    "notebook.diff.ignoreOutputs": true,
    "notebook.output.scrolling": true,
    "notebook.output.textLineLimit": 10,
    "python.analysis.autoImportCompletions": true,
    "python.analysis.typeCheckingMode": "basic",
    // other extensions
    "thunder-client.indentSize": 4,
    "cSpell.ignorePaths": [
        "package-lock.json",
        "node_modules",
        "vscode-extension",
        ".git/objects",
        ".vscode",
        ".vscode-insiders",
        ".devcontainer",
        "dotfiles"
    ],
    // language specific
    "[typescriptreact]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "go.toolsManagement.autoUpdate": true,
    "[shellscript]": {
        "editor.defaultFormatter": "foxundermoon.shell-format"
    },
    "[dockerfile]": {
        "editor.defaultFormatter": "ms-azuretools.vscode-docker"
    },
}
